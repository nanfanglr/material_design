<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".TextFromHtmlActivity">

    <TextView
        android:id="@+id/tv_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textColor="#222"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1" />

    <ImageView
        android:id="@+id/img_item_pic"
        android:layout_width="75dp"
        android:layout_height="80dp"
        android:layout_marginLeft="6dp"
        android:background="@color/blue"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/tv_time"
        app:layout_constraintLeft_toRightOf="@+id/tv_num"
        app:layout_constraintTop_toTopOf="@+id/tv_product_name" />

    <TextView
        android:id="@+id/tv_product_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/img_item_pic"
        android:maxLines="2"
        android:textColor="#222222"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@+id/img_item_pic"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈" />

    <TextView
        android:id="@+id/tv_sell_data"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="#222222"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_product_name"
        app:layout_constraintRight_toRightOf="@+id/tv_product_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_name"
        tools:text="哈哈" />

    <TextView
        android:id="@+id/tv_discount_data"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="#222222"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_product_name"
        app:layout_constraintRight_toRightOf="@+id/tv_product_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_sell_data"
        tools:text="哈哈哈哈哈哈哈哈哈哈哈哈" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="#222222"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_product_name"
        app:layout_constraintRight_toRightOf="@+id/tv_product_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_discount_data"
        tools:text="哈哈" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#eeeeee"
        app:layout_constraintTop_toBottomOf="@+id/tv_time" />
</android.support.constraint.ConstraintLayout>